# Kafka (env_prefix: KAFKA_)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=my-consumer-group
KAFKA_AUTO_OFFSET_RESET=earliest  # earliest | latest | none
KAFKA_ENABLE_AUTO_COMMIT=false
KAFKA_SESSION_TIMEOUT_MS=60000

# Parallel Consumer (env_prefix: PARALLEL_CONSUMER_)
PARALLEL_CONSUMER_POLL_BATCH_SIZE=1000
PARALLEL_CONSUMER_WORKER_POOL_SIZE=8
PARALLEL_CONSUMER_DIAG_LOG_EVERY=1000
PARALLEL_CONSUMER_BLOCKING_WARN_SECONDS=5.0
PARALLEL_CONSUMER_BLOCKING_CACHE_TTL=100

# Execution (env_prefix: EXECUTION_)
EXECUTION_MODE=async   # async | process
EXECUTION_MAX_IN_FLIGHT=1000
EXECUTION_MAX_REVOKE_GRACE_MS=500
EXECUTION_MAX_RETRIES=3
EXECUTION_RETRY_BACKOFF_MS=1000
EXECUTION_EXPONENTIAL_BACKOFF=true
EXECUTION_MAX_RETRY_BACKOFF_MS=30000
EXECUTION_RETRY_JITTER_MS=200

# Async engine
EXECUTION_ASYNC_CONFIG__TASK_TIMEOUT_MS=30000

# Process engine (env_prefix: PROCESS_)
PROCESS_PROCESS_COUNT=8
PROCESS_QUEUE_SIZE=2048
PROCESS_REQUIRE_PICKLABLE_WORKER=true
PROCESS_BATCH_SIZE=64
PROCESS_BATCH_BYTES=256KB
PROCESS_MAX_BATCH_WAIT_MS=5
PROCESS_WORKER_JOIN_TIMEOUT_MS=30000
PROCESS_TASK_TIMEOUT_MS=30000
PROCESS_MSGPACK_MAX_BYTES=1000000

# Metrics (env_prefix: METRICS_)
METRICS_ENABLED=false
METRICS_PORT=9091

# DLQ (under KAFKA_ prefix)
KAFKA_DLQ_ENABLED=true
KAFKA_DLQ_TOPIC_SUFFIX=.dlq
KAFKA_DLQ_PAYLOAD_MODE=full  # full | metadata_only

# Grafana (docker-compose)
GF_SECURITY_ADMIN_PASSWORD=
