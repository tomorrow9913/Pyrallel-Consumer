# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=my-consumer-group
KAFKA_AUTO_OFFSET_RESET=earliest  # earliest | latest | none
KAFKA_ENABLE_AUTO_COMMIT=false
KAFKA_SESSION_TIMEOUT_MS=60000

# Parallel Consumer
PARALLEL_CONSUMER__POLL_BATCH_SIZE=1000
PARALLEL_CONSUMER__WORKER_POOL_SIZE=8
PARALLEL_CONSUMER__DIAG_LOG_EVERY=1000
PARALLEL_CONSUMER__BLOCKING_WARN_SECONDS=5.0
PARALLEL_CONSUMER__BLOCKING_CACHE_TTL=100

# Execution
PARALLEL_CONSUMER__EXECUTION__MODE=async   # async | process
PARALLEL_CONSUMER__EXECUTION__MAX_IN_FLIGHT=1000
PARALLEL_CONSUMER__EXECUTION__MAX_REVOKE_GRACE_MS=500
PARALLEL_CONSUMER__EXECUTION__MAX_RETRIES=3
PARALLEL_CONSUMER__EXECUTION__RETRY_BACKOFF_MS=1000
PARALLEL_CONSUMER__EXECUTION__EXPONENTIAL_BACKOFF=true
PARALLEL_CONSUMER__EXECUTION__MAX_RETRY_BACKOFF_MS=30000
PARALLEL_CONSUMER__EXECUTION__RETRY_JITTER_MS=200

# Async engine
PARALLEL_CONSUMER__EXECUTION__ASYNC_CONFIG__TASK_TIMEOUT_MS=30000

# Process engine
PARALLEL_CONSUMER__EXECUTION__PROCESS_CONFIG__PROCESS_COUNT=8
PARALLEL_CONSUMER__EXECUTION__PROCESS_CONFIG__QUEUE_SIZE=2048
PARALLEL_CONSUMER__EXECUTION__PROCESS_CONFIG__REQUIRE_PICKLABLE_WORKER=true
PARALLEL_CONSUMER__EXECUTION__PROCESS_CONFIG__BATCH_SIZE=64
PARALLEL_CONSUMER__EXECUTION__PROCESS_CONFIG__BATCH_BYTES=256KB
PARALLEL_CONSUMER__EXECUTION__PROCESS_CONFIG__MAX_BATCH_WAIT_MS=5
PARALLEL_CONSUMER__EXECUTION__PROCESS_CONFIG__WORKER_JOIN_TIMEOUT_MS=30000
PARALLEL_CONSUMER__EXECUTION__PROCESS_CONFIG__TASK_TIMEOUT_MS=30000

# Metrics
METRICS__ENABLED=true
METRICS__PORT=9091

# DLQ
KAFKA_DLQ_ENABLED=true
KAFKA_DLQ_TOPIC_SUFFIX=.dlq
